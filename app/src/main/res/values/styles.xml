<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>

    </style>

    <style name="Control" />


    <style name="EditText.Password" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:hint">密码</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColorHint">@color/pwd</item>
        <item name="android:drawableLeft">@mipmap/ic_edit_password</item>
    </style>
    <style name="EditText.name" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:hint">用户名</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColorHint">@color/pwd</item>
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@mipmap/ic_edit_username</item>
    </style>
    <style name="EditText.qq" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:hint">邮箱</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColorHint">@color/pwd</item>
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@mipmap/ic_edit_email</item>
    </style>

    <style name="Layout.Toolbar" parent="Control">
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="ImageView.Toolbar" parent="Control">
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:background">@drawable/selector_color_main_add</item>
    </style>

    <style name="EditText.Search1" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:hint">搜索一下</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:layout_height">34dip</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginBottom">8dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColorHint">@color/greySub</item>
        <item name="android:background">#ff500f</item>
    </style>

    <style name="Spinner.Toolbar" parent="Control">
        <item name="android:layout_width">64dip</item>
        <item name="android:layout_height">34dip</item>
        <item name="android:layout_marginRight">4dip</item>
    </style>
    <style name="TextView.GoodsCalc" parent="Control">
    <item name="android:textSize">14sp</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_height">40dip</item>
    <item name="android:layout_marginTop">1px</item>
    <item name="android:background">@color/white</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="TextView.GoodsBuy" parent="Control">
        <item name="android:text">去结算</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">120dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/selector_color_main_add</item>
    </style>
</resources>
